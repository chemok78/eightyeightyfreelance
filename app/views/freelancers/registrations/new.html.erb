<div class="container">
  
<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">Sign Up Freelancers</li>
</ol>

  <div class="panel panel-default top-buffer bottom-buffer">
  
    <div class="panel-heading">
      <h2>Sign up</h2>
    </div>
  
    <div class="panel-body">
  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
        <div class="form-group">
          <%= f.label :gender, "Gender*" %>
          <%= f.select(:gender, ['Sir', 'Madam', 'Miss'], {}, { :class => 'form-control' }) %>
        </div>
    
        <div class="form-group">
          <%= f.label :first_name, "First Name*" %>
          <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :last_name, "Last Name*" %>
          <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :street_name, "Street*" %>
          <%= f.text_field :street_name, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :house_number, "Number*" %>
          <%= f.text_field :house_number, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :postal_code, "Postal Code*" %>
          <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :city, "City*" %>
          <%= f.select(:city, ['Hong Kong', 'Singapore', 'Beijing', 'Shanghai', 'Guangzhou'], {}, { :class => 'form-control' }) %>
        </div>
        
        <div class="form-group">
          <%= f.label :region, "Region*" %>
          <%= f.select(:region, ['Central', 'Kowloon', 'New Territories', 'Sai Kung'], {}, { :class => 'form-control' }) %>
        </div>
        
        <div class="form-group">
          <%= f.label :phone, "Phone Number" %>
          <%= f.text_field :phone, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :profession, "Profession*" %>
           <%= f.select(:profession, ['Accountancy', 'Admin', 'Advisory', 'Agile'], {}, { :class => 'form-control' }) %>
        </div>

      <div class="form-group">
        <%= f.label :email, "Email*" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :terms_of_service do %>
        <%= f.check_box :terms_of_service, class: "form-control" %>
        I Agree to the Terms Of Service  
        <% end %>
      </div>
    
      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  
  </div><!-- end panel body -->
  
    <div class="panel-footer">
      <%= render "freelancers/shared/links" %>
    </div>
    

  </div><!-- end panel-->

</div><!--end container-->