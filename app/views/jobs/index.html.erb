<div class="container bottom-buffer">

  <p id="notice"><%= notice %></p>
  
  <h1>Available Projects</h1>
  <p>Below you find the most recent projects. Use the search function for finding specific projects</p>
  
  <div class="panel-body">
  
  <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
    <thead>
      <tr>
        <th>Function</th>
        <th>Place</th>
        <th>Employer Email</th>
        <th>Edit</th>
        <th>Del</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.function, job %></td>
          <td><%= link_to job.place, job %></td>
          <td><%= link_to job.employer.email, job if job.employer %></td>
          <% if job.employer == current_employer %>
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
            <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

  <% if employer_signed_in? %>  
  <%= link_to 'New Job', new_job_path, class:"btn btn-primary" %>
  <% end %>

</div>

</div>

