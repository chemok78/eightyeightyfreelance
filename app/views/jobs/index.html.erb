<div class="container bottom-buffer">

  <p id="notice"><%= notice %></p>
  
<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">Projects</li>
</ol>
  
  <h1>Available Projects</h1>
  <p>Below you find the most recent projects. Use the search function for finding specific projects</p>
  
  <div class="panel-body">
  
  <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
    <thead>
      <tr>
        <th>Function</th>
        <th>Place</th>
        <th>Employer Email</th>
        <th>Edit</th>
        <th>Del</th>
      </tr>
    </thead>
  
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job.job_title, job %></td>
          <td><%= link_to job.city, job %></td>
          <td><%= link_to job.employer.company_name, job if job.employer %></td>
          <% if job.employer == current_employer %> <!--Check if current employer is job.employer to see links -->
          <div class="actions">
            <td><%= link_to 'Edit', edit_job_path(job) %></td>
            <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>

  <% if employer_signed_in? %>  
  <%= link_to 'New Job', new_job_path, class:"btn btn-primary" %>
  <% end %>
  
  <div class="center">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>

</div>

</div>


