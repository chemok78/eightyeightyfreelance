<div class="container">
  
  <p id="notice"><%= notice %></p>
  
    <div class="panel panel-default">
      
    <div class="panel-heading">
     
     <p>
        <%= @job.description %>
      </p>
      
    </div>
      
  
      <div class="panel-body">
        
      <p>
        <strong>Place:</strong>
        <%= @job.place %>
      </p>
      
      <p>
        <strong>Length:</strong>
        <%= @job.length %>
      </p>
      
      <p>
        <strong>Function:</strong>
        <%= @job.function %>
      </p>
      
      <p>
        <strong>Company:</strong>
        <%= @job.company %>
      </p>
      
      <p>
        <strong>Educationlevel:</strong>
        <%= @job.educationlevel %>
      </p>
      
      <p>
        <strong>Yearsexperience:</strong>
        <%= @job.yearsexperience %>
      </p>
      
      <p>
        <strong>Field1:</strong>
        <%= @job.field1 %>
      </p>
      
      <p>
        <strong>Field2:</strong>
        <%= @job.field2 %>
      </p>
      
      <p>
        <strong>Hourlyrate:</strong>
        <%= @job.hourlyrate %>
      </p>
      
      <p>
        <strong>Region:</strong>
        <%= @job.region %>
      </p>
      
      <p>
        <strong>Field2:</strong>
        <%= @job.field2 %>
      </p>
      
      </div>
      
      <div class="panel-footer">
      
      <% if @job.employer == current_employer %>
        <%= link_to 'Edit', edit_job_path(@job) %> |
      <% end %>
        <%= link_to 'Back', jobs_path %>

      </div>
      
  </div>

</div>
