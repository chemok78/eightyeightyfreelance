<div class="container">
  
  <p id="notice"><%= notice %></p>
  
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
    
      <div class="panel panel-default">
        
      <div class="panel-heading">
       
       <p>
          <%= @job.description %>
        </p>
        
      </div>
        
    
        <div class="panel-body">
          
        <p>
          <strong>City:</strong>
          <%= @job.city %>
        </p>
        
        <p>
          <strong>Length:</strong>
          <%= @job.length %>
        </p>
        
        <p>
          <strong>Function:</strong>
          <%= @job.job_title %>
        </p>
        
        <p>
          <strong>Company:</strong>
          <%= @job.company %>
        </p>
        
        <p>
          <strong>Educationlevel:</strong>
          <%= @job.education_level %>
        </p>
        
        <p>
          <strong>Yearsexperience:</strong>
          <%= @job.years_experience %>
        </p>
        
        <p>
          <strong>Field1:</strong>
          <%= @job.business_field1 %>
        </p>
        
        <p>
          <strong>Field2:</strong>
          <%= @job.business_field2 %>
        </p>
        
        <p>
          <strong>Hourlyrate:</strong>
          <%= @job.hourly_rate %>
        </p>
        
        <p>
          <strong>Region:</strong>
          <%= @job.region %>
        </p>
        
        </div>
      
        <div class="panel-footer">
      
      <% if @job.employer == current_employer %>
        <%= link_to 'Edit', edit_job_path(@job) %> |
      <% end %>
        <%= link_to 'Back', jobs_path %>

        </div>
      
      </div>
  
    </div>
  
  </div><!--close row div-->

</div>
